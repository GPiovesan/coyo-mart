<%= stylesheet_link_tag "category", "data-turbo-track": "reload" %>

<!-- Header -->  
<div class="header-container">
  <div class="header-container">
    <h1>Categorias</h1>
  </div>
</div>

<div class="content">
  <div class="categories">
    <div class="search">
    <h1>Listando Categorias</h1>
    <p style="color: green"><%= notice %></p>
      <%= search_form_for @q do |f| %>
        <%= f.search_field :category_cont, placeholder: 'Pesquisa' %>
        <%= f.submit name: '' %>
      <% end %>
    </div>

    <%= render "categories-table", caregory: @categories %>
    <%= link_to 'Nova Categoria', new_category_path, class:"link-new-categories" %>

  </div>
</div>

