<%= form_with(model: category) do |form| %>

<div class="category-form">
    <% if category.persisted? %>
      <h1>Detalhes da Categoria</h1>
    <% else %>
      <h1>Nova Categoria</h1>
    <% end %>
  <br>

  <% if category.errors.any? %>
    <div style="color: red">
      <h2>Atenção! Preencha os campos obrigatórios:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li style = 'list-style: none'><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>

    <br>
  <% end %>

  <div class="category-field-75">
    <%= form.label :category, style: "display: block" %>
    <%= form.text_field :category, class:"category-field" %>
  </div>

  <div class="btn-category-form">
    <% if category.persisted? %>
      <%= form.submit 'Salvar alterações', class:"btn-save-category", id:"btn-save-product" %>
      <%= form.submit 'Deletar categoria', class:"btn-delete-category" %>
    <% else %>
      <%= form.submit 'Criar categoria', class:"btn-save-category", id:"btn-create-product"%>
    <% end %>
    
  </div>
</div>
<% end %>