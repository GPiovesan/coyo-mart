<table>
    <tr>
        <th>Imagem</th>
        <th>Descrição</th>
        <th>Categoria</th>
        <th>Un</th>
        <th>Estoque</th>
        <th>Valor</th>
        <th></th>
    </tr>
    <% @products.each do |product| %>
    <tr>
        <td><%= image_tag product.image, style: 'height:50px; width:50px;' %></td>
        <td><%= product.description %></td>
        <td><%= product.category.category %></td>
        <td><%= product.measure.measure %></td>
        <td><%= product.stock_amount %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><p><%= link_to "Exibir produto", edit_product_path(product), class:"show-product" %></p>
    </tr>
    <% end %>
</table>